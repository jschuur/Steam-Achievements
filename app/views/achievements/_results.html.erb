<% if @achievements.unlocked %>
  <div id="tally"><%= @achievements.unlocked.length %> of <%= @achievements.all.length %> unlocked 
    <% if @achievements.sparkline_history.sum.nonzero? %>
      (<%= sparkline_tag @achievements.sparkline_history, :type => 'bar', :title => '4 week history', :step => 4, :height => 12, :background_color => '#e0e0d8', :below_color => 'black' %>)
    <% end %>
  </div>
  <% @achievements.unlocked.each do |achievement| %>
    <div class="achievement">
      <div class="name"><%= achievement.name %></div>
      <div class="description"><%= achievement.description %></div>
      <div class="time"><%= achievement.timestamp.strftime("%D") if achievement.timestamp %></div>
    </div>
  <% end %>
<% else %>
  <p>No unlocked achievements for this game.</p>
<% end %>