<%= form_tag({:action => :search}, {:method => :get, :remote => true, :id => "lookup"}) do %>
  <%= text_field_tag :user, current_user.try(:steamid) || params[:user], :placeholder => "Steam user name" %>
  <%= select_tag :game, options_for_select(APP_CONFIG['games'].to_a.map {|g| g.reverse}, params[:game]) %>
  <%= submit_tag "Search" %>
  <div id="hint">Visit your <a target="_new" href="http://steamcommunity.com">Steam Community</a> profile and use the 'id' or 'profile' value from the URL (e.g. '<%= link_to 'jschuur', achievements_path(:user => 'jschuur', :game => 'tf2') %>' or '<%= link_to '76561197992422064', achievements_path(:user => '76561197992422064', :game => 'tf2') %>').</div>
<% end %>
<div id="spinner"><%= image_tag "loading.gif" %></div>
<div id="errors"></div>
<div id="results"></div>